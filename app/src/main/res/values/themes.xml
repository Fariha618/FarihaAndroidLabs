<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FarihasAndroidLabs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#5B8F8A</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/my_secondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/my_statusbar</item>
        <!-- Text Color For Hello World. -->
        <item name="android:textColor">@color/my_text</item>

        <!-- Tells Android not to use ActionBar in order to use Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>